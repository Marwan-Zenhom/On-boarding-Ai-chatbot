{
    "name": "onboarding-chat-root",
    "version": "1.0.0",
    "description": "Root configuration for Onboarding AI Chatbot",
    "private": true,
    "scripts": {
        "setup": "npm install && npm run setup:backend && npm run setup:frontend",
        "setup:backend": "cd backend && npm install",
        "setup:frontend": "cd frontend && npm install",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm start",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd backend && npm start",
        "start:frontend": "cd frontend && npm run build && serve -s frontend/build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "author": "Marwan Zenhom",
    "license": "MIT"
}